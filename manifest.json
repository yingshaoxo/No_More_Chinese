{
    "name": "No_More_Chinese",
    "version": "1.1",
    "description": "Close those webpages which contains Chinese.",

    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "manifest_version": 2,

    "permissions": ["<all_urls>", "tabs", "activeTab"],

    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "No More Chinese",
        "default_icon": {
            "16": "icon.png",
            "32": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    }, 

    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["do.js"]
        }
    ]

}
